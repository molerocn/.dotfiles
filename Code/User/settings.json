{
  "workbench.editor.showTabs": "single",
  "editor.cursorStyle": "block",
  "workbench.activityBar.location": "hidden",
  "window.menuBarVisibility": "hidden",

  "editor.fontSize": 16,
  "window.zoomLevel": 2,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  "workbench.editor.openPositioning": "last",
  "editor.rulers": [80],
  "editor.minimap.enabled": false,
  "git.decorations.enabled": false,
  "extensions.ignoreRecommendations": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 40,
  "vim.leader": " ",
  "vim.scroll": 25,
  "editor.cursorSurroundingLines": 8,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["K"], "commands": [{ "command": "editor.action.showHover" }] },
    { "before": ["[", "d"], "commands": [{ "command":  "editor.action.marker.prev" }] },
    { "before": ["]", "d"], "commands": [{ "command": "editor.action.marker.next" }] },
    { "before": ["g", "r"], "commands": [{ "command": "references-view.findReferences" }] },
    { "before": ["<leader>", "c", "a"], "commands": [{ "command": "editor.action.codeAction" }] },
    { "before": ["<leader>", "d"], "after": ["V", "D", ":", "w", "<CR>"]},
    { "before": ["<leader>", "r", "e"], "commands": [{ "command": "editor.action.rename" }] },
    { "before": ["<leader>", "p", "s"], "commands": [{ "command": "workbench.action.findInFiles" }] },
    { "before": ["<leader>", "g", "s"], "commands": [{ "command": "workbench.view.scm" }] },
    { "before": ["<leader>", "v"], "commands": [{ "command": "workbench.files.action.showActiveFileInExplorer" }] },
    { "before": ["<Esc>"], "after": ["$"] },
    { "before": ["u"], "commands": [{ "command": "undo" }] },
    { "before": ["<C-r>"], "commands": [{ "command": "redo" }] },
    { "before": ["<C-s>"], "after": [":", "w", "<CR>"] },
    { "before": ["<C-o>"], "after": ["<C-o>", "z", "z"] },
    { "before": ["s"], "after": [":", "w", "<CR>"] },
    { "before": ["("], "after": ["<nop>"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": [")"], "after": ["<nop>"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["c", "i", "e"], "after": ["c", "i", "\""] },
    { "before": ["d", "i", "e"], "after": ["d", "i", "\""] },
    { "before": ["v", "i", "e"], "after": ["v", "i", "\""] },
    { "before": ["y", "i", "e"], "after": ["y", "i", "\""] },
    
    // harpoon
    { "before": ["<leader>", "a"], "commands": [{ "command": "vscode-harpoon.addEditor" }] },
    { "before": ["<C-e>"], "commands": [{ "command": "vscode-harpoon.editEditors" }] },
    { "before": ["<C-h>"], "commands": [{ "command": "vscode-harpoon.gotoEditor1" }] },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["p"], "after": ["p", "g", "v", "y"] },
    { "before": ["B"], "commands": ["editor.action.moveLinesDownAction"], "args": { "by": "line", "value": 1 } },
    { "before": ["M"], "commands": ["editor.action.moveLinesUpAction"], "args": { "by": "line", "value": 1 } },
    { "before": ["<leader>", "y"], "commands": [{ "command": "editor.action.clipboardCopyAction" }], "after": ["y"] },
    { "before": ["<leader>", "c", "e"], "commands": [{ "command": "github.copilot.interactiveEditor.explain" }] },
    { "before": ["W"], "after": ["<nop>"] },
  ],
  "editor.inlineSuggest.enabled": false,
}