#!/bin/bash

# setup sh
rm ~/.zshrc
ln -s ~/personal/.dotfiles/.zshrc ~/
# setup tmux
ln -s ~/personal/.dotfiles/.tmux.conf ~/
# kitty
ln -s ~/personal/.dotfiles/kitty ~/.config/
# visual studio code
ln -s ~/personal/.dotfiles/code/keybindings.json ~/.config/Code/User/
ln -s ~/personal/.dotfiles/code/settings.json ~/.config/Code/User/
# autostart script
mkdir -p ~/.config/autostart
ln -s ~/personal/.dotfiles/shortcuts/autostart.desktop ~/.config/autostart/
# keyd
sudo mkdir -p /etc/keyd/
sudo ln -s ~/personal/.dotfiles/default.conf /etc/keyd/
# gnome settings
dconf load /org/gnome/settings-daemon/plugins/media-keys/ < ~/personal/.dotfiles/gnome/custom_shortcuts.dconf
dconf load /org/gnome/desktop/wm/keybindings/ < ~/personal/.dotfiles/gnome/desktop_keybindings.dconf
gsettings set org.gnome.desktop.peripherals.keyboard repeat-interval 25 # 30 default
gsettings set org.gnome.desktop.peripherals.keyboard delay 300 # 500 default
