general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "cpu_temperature 0"
order += "volume master"
order += "memory"
order += "cpu_usage"
order += "battery 0"
order += "tztime local"

volume master {
    format = "Vol: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

memory {
    format = "RAM: %used / %total"
    threshold_degraded = "1G"
    threshold_critical = "500M"
}

cpu_usage {
    format = "CPU: %usage"
}

battery 0 {
    format = "Batt: %status %percentage %remaining"
    path = "/sys/class/power_supply/BAT0/uevent"
    last_full_capacity = true
    format_percentage = "%d%%"
}

tztime local {
    format = "%a %B %e %I:%M %p"
}

cpu_temperature 0 {
    format = "Temp: %degrees Â°C"
    path = "/sys/class/thermal/thermal_zone0/temp"
}
